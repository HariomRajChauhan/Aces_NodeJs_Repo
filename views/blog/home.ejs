<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>

    <style>
        /* General Styles */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .main {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            padding: 20px;
        }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
            width: 300px;
            margin: 20px;
            border-radius: 5px;
            overflow: hidden;
        }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }

        .image img {
            width: 100%;
            height: auto;
        }

        .card h2 {
            margin: 15px;
        }

        .card p {
            margin: 15px;
            color: grey;
        }

        .card a {
            display: inline-block;
            margin: 15px;
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
        }

        .card a {
            color: #007bff;
            /* Default state */
        }

        .card a:visited {
            color: #6610f2;
        }

        .card a:hover,
        .card a:focus {
            color: #0056b3;
        }

        .card a:active,
        .card a:target {
            color: #004380;
        }

        .card a:lang(fr) {
            color: #6610f2;
        }


        .searchbar {
            display: flex;
            justify-content: center;
            padding: 20px;
        }

        .searchbar form {
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        .searchbar input[type="search"] {
            padding: 10px;
            margin-right: 10px;
            width: 300px;
            border: 1px solid #333;
            border-radius: 5px;
        }

        .searchbar input[type="submit"] {
            padding: 10px 20px;
            background-color: #333;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .searchbar input[type="submit"]:hover {
            background-color: #555;
        }

        /* Media Queries */
        @media (max-width: 768px) {

            .main,
            .card {
                grid-template-columns: repeat(1, 1fr);
            }

            .searchbar form,
            .naviagtion {
                flex-direction: column;
            }

            .searchbar input[type="search"],
            .searchbar input[type="submit"],
            nav ul {
                width: 100%;
            }

            nav ul {
                display: flex;
                flex-direction: column;
                gap: 10px;
            }

            nav ul li {
                display: block;
            }

            header,
            .card h2,
            .card p,
            .card a {
                font-size: 0.8rem;
            }

            .searchbar,
            .card {
                padding: 5px;
            }

            .card .image img {
                width: 100%;
                height: auto;
            }

            .searchbar input[type="submit"]:hover {
                background-color: #555;
            }

            .naviagtion {
                padding: 0 10px;
            }
        }

        @media (max-width: 500px) {
            .main {
                grid-template-columns: repeat(1, 1fr);
            }
        }
    </style>
</head>

<body>
    <%- include('../partials/nav.ejs') %>

    <div class="searchbar">
        <form action="/" method="post">

            <input type="search" name="search" placeholder="Search Blogs">
            <input type="submit" />
        </form>
    </div>
    <div class="main">
        <% blogs.forEach((blogs)=> { %>
            <div class="card">
                <div class="image">
                    <img src="<%-blogs.image%>" alt="profile image">
                </div>
                <h2><%- blogs.title %></h2>
                <p style="display: block;"><%-blogs.subtitle%></p>
                <p><a href="/blog/<%- blogs._id %>">See More...</a></p>
            </div>
            <% }) %>
    </div>
</body>

</html>